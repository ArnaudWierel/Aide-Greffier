{
  "name": "audience-greffier-seal-final",
  "version": "1.0.0",
  "homepage": "./",
  "description": "Générateur d’audience judiciaire style US avec sceaux",
  "author": "Arnaud Wierel",
  "private": true,
  "main": "build/electron.js",
  "dependencies": {
    "@hello-pangea/dnd": "^18.0.1",
    "autoprefixer": "^10.4.14",
    "country-flag-icons": "^1.5.19",
    "postcss": "^8.4.21",
    "react": "^18.2.0",
    "react-country-flag": "^3.1.0",
    "react-dom": "^18.2.0",
    "react-scripts": "5.0.1",
    "tailwindcss": "^3.3.2",
    "uuid": "^11.1.0"
  },
  "devDependencies": {
    "electron": "^36.5.0",
    "electron-builder": "^26.0.12",
    "electron-packager": "^17.1.2"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "electron-pack": "npm run build && copy public\\electron.js build && electron-builder --dir",
    "electron-dist": "npm run build && copy public\\electron.js build && electron-builder"
  },
  "build": {
    "appId": "com.audience.greffier",
    "productName": "GreffierUS",
    "directories": {
      "buildResources": "public"
    },
    "files": [
      "build/**/*",
      "build/electron.js"
    ],
    "extraResources": [
      {
        "from": "public/seal.png",
        "to": "seal.png"
      }
    ],
    "win": {
      "target": "msi",
      "icon": "public/icon.ico"
    }
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
